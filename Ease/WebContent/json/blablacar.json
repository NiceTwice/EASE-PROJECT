{
    "website":"blablacar",
    
    "tested":"CLASSIC CONNECTION ONLY. FAILS TO CHECK",
    
    "urls":{
        "login":"https://www.blablacar.fr/identification",
        "loginFacebook":"https://www.blablacar.fr/connect/facebook"
    },
    
    "elements":{
        
        "userField":{
            "tagName":"input",
            "name":"_username",
            "className":"login-email registration-email"
        },
        "passField":{
            "tagName":"input",
            "name":"_password",
            "className":"login-pass registration-password"
        },
        "buttonLogIn":{
            "tagName":"button",
            "type":"submit",
            "name":"_submit",
            "className":"btn-validation btn-large full-width apply-btn-loader"
        },
        "userFbField":{
            "id":"email"
        },
        "passFbField":{
            "id":"pass"
        },
        "logInButtonFB":{
            "id":"loginbutton"
        }
        
    },
    
    "connectionSteps":[
        {
            "action":"goTo",
            "url":"login"
        },
        
        {
                "action":"catchFail",
                "if":"missingElement",
                "elementName":"passField",
                "actionsIfFail":[],
                "send":"alreadyConnected"
        },
        
        {
            "action":"do",
            "elements":[
                {
                    "name":"userField",
                    "action":"fill",
                    "value":"user"
                },
                {
                    "name":"passField",
                    "action":"fill",
                    "value":"pass"
                },
                {
                    "name":"buttonLogIn",
                    "action":"click"
                }
            ]
        },
        
        {
            "action":"nextPage",
            "lastPage":true
        },
        
        {
            "action":"catchFail",
            "if":"existingElement",
            "elementName":"passField",
            "actionsIfFail":[],
            "send":"wrongPassword"
        }
    ]
}