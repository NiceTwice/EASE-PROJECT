
{
    "website":"crossknowledge ieseg",
    
    "urls":{
        "login":"http://ieseg.lms.crossknowledge.com/interfaces/login.php"
    },
    
    "elements":{
        
        "userField":{
            "id":"fldUserName"
        },
        "passField":{
            "id":"fldPassword"
        },
        "buttonLogIn":{
            "tagName":"input",
            "type":"submit",
            "name":"submitButtonName",
            "className":"buttonSubmit"
        }
        
    },
    
    "connectionSteps":[
        {
            "action":"goTo",
            "url":"login"
        },
        
        {
                "action":"catchFail",
                "if":"missingElement",
                "elementName":"passField",
                "actionsIfFail":[],
                "send":"alreadyConnected"
        },
        
        {
            "action":"do",
            "elements":[
                {
                    "name":"userField",
                    "action":"fill",
                    "value":"user"
                },
                {
                    "name":"passField",
                    "action":"fill",
                    "value":"pass"
                },
                {
                    "name":"buttonLogIn",
                    "action":"click"
                }
            ]
        },
        
        {
           "action":"nextPage",
            "lastPage":true
        },
        
        {
            "action":"catchFail",
            "if":"existingElement",
            "elementName":"passField",
            "actionsIfFail":[],
            "send":"wrongPassword"
        }
    ]
}
