{
    "website":"mediaplus ieseg",
    
    "urls":{
        "login":"http://www.mediapluspro.com/mediaplus69/client_net/login.aspx?cfgsite=html5&cfgbdd=ieseg-67"
    },
    
    "elements":{
        
        "userField":{
            "id":"Login"
        },
        "passField":{
            "id":"Password"
        },
        "buttonLogIn":{
            "id":"btnLogin"
        }
        
    },
    
    "connectionSteps":[
        {
            "action":"goTo",
            "url":"login"
        },
        
        {
                "action":"catchFail",
                "if":"missingElement",
                "elementName":"passField",
                "actionsIfFail":[],
                "send":"alreadyConnected"
        },
        
        {
            "action":"do",
            "elements":[
                {
                    "name":"userField",
                    "action":"fill",
                    "value":"user"
                },
                {
                    "name":"passField",
                    "action":"fill",
                    "value":"pass"
                },
                {
                    "name":"buttonLogIn",
                    "action":"click"
                }
            ]
        },
        
        {
            "action":"nextPage",
            "lastPage":true
        },
        
        {
            "action":"catchFail",
            "if":"existingElement",
            "elementName":"passField",
            "actionsIfFail":[],
            "send":"wrongPassword"
        }
    ]
}
