
{
    "website":"open classroom",
    
    "urls":{
        "login":"https://openclassrooms.com/login",
        "loginFacebook":"https://www.facebook.com/v2.3/dialog/oauth?client_id=277769842283905&redirect_uri=https%3A%2F%2Fopenclassrooms.com%2Flogin_check_facebook&state=f615a87769d9ab863e56527117350fdb&sdk=php-sdk-4.0.23&scope=public_profile%2Cemail",
        "loginGoogle":"https://accounts.google.com/o/oauth2/auth?response_type=code&redirect_uri=https%3A%2F%2Fopenclassrooms.com%2Flogin_check_google&client_id=132418960718-jdnmpug3g9e6ub2p41ergcci1492qh82.apps.googleusercontent.com&scope=https%3A%2F%2Fwww.googleapis.com%2Fauth%2Fplus.me+https%3A%2F%2Fwww.googleapis.com%2Fauth%2Fuserinfo.email+https%3A%2F%2Fwww.googleapis.com%2Fauth%2Fuserinfo.profile&access_type=online&approval_prompt=auto"
    },
    
    "elements":{
        
        "userField":{
            "id":"_username"
        },
        "passField":{
            "id":"_password"
        },
        "buttonLogIn":{
                "id":"login"
        },
        "userFbField":{
            "id":"email"
        },
        "passFbField":{
            "id":"pass"
        },
        "logInButtonFB":{
            "id":"loginbutton"
        },
         "userGoogleField":{
            "id":"Email"
        },
        "passGoogleField":{
            "id":"Passwd"
        },
        "buttonGoogleFirstPage":{
            "id":"next"
        },
        "buttonGoogleLogIn":{
                "id":"signIn"
        }
        
    },
    
    "connectionSteps":[
        {
            "action":"goTo",
            "url":"login"
        },
        
        {
                "action":"catchFail",
                "if":"missingElement",
                "elementName":"passField",
                "actionsIfFail":[],
                "send":"alreadyConnected"
        },
        
        {
            "action":"do",
            "elements":[
                {
                    "name":"userField",
                    "action":"fill",
                    "value":"user"
                },
                {
                    "name":"passField",
                    "action":"fill",
                    "value":"pass"
                },
                {
                    "name":"buttonLogIn",
                    "action":"click"
                }
            ]
        },
        
        {
            "action":"nextPage",
            "lastPage":true
        },
        
        {
            "action":"catchFail",
            "if":"existingElement",
            "elementName":"passField",
            "actionsIfFail":[],
            "send":"wrongPassword"
        }
    ]
}
