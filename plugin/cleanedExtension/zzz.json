{
    "manifest_version": 2,

    "name": "Ease New Extension",
    "version": "1.4.0",
    "description": "Ease extension, log you in and out",

    "icons": {
        "128": "images/logo_128.png"
    },

    "browser_action": {
        "default_popup": "functionnalities/popup.html",
        "default_icon": "images/logo_296.png"
    },

    "content_scripts": [
        {
            "matches": ["https://ease.space/*", "https://www.ease.space/*", "http://ease.space/*", "http://www.ease.space/*", "http://localhost:8080/*", "https://localhost:8443/*", "http://51.254.207.91/*"],
            "js": ["easeActions/scrapping.js", "easeActions/easeListener.js", "easeActions/updatesSender.js"],
            "run_at": "document_end"
    },
        {
            "matches": ["<all_urls>"],
            "js": ["jquery-3.1.0.js", "tools/extension_scripts.js", "checkConnections/connectionListener.js", "contentScripts/connect.js"],
            "run_at": "document_end"
    },
        {
            "matches": ["https://www.facebook.com/*"],
            "js": ["facebookCo/checkFacebookConnection.js", "checkConnections/updatesFacebook.js",
                "overlay/injectOverlayScrap.js", "scrappingTuto/scrapFacebook.js"],
            "css": ["overlay/overlayScrap.css"],
            "run_at": "document_end"
    },
        {
            "matches": ["https://passwords.google.com/*", "https://accounts.google.com/*", "https://myaccount.google.com/*"],
            "js": ["overlay/injectOverlayScrap.js", "scrappingTuto/scrapChrome.js"],
            "css": ["overlay/overlayScrap.css"],
            "run_at": "document_end"
    },
        {
            "matches": ["https://www.linkedin.com/*"],
            "js": ["checkConnections/updatesLinkedin.js", "overlay/injectOverlayScrap.js", "scrappingTuto/scrapLinkedin.js"],
            "css": ["overlay/overlayScrap.css"],
            "run_at": "document_end"
    }
  ],

    "background": {
        "page": "background/background.html",
        "persistent": false
    },

    "permissions": ["tabs", "\u003Call_urls\u003E", "http://*/*", "https://*/*", "webNavigation", "storage", "identity", "identity.email", "https://*/", "http://*/"],

    "web_accessible_resources": ["scrappingTuto/logo.png", "scrappingTuto/facebook.png", "scrappingTuto/linkedin.png", "scrappingTuto/chrome.png"],

    "chrome_url_overrides": {
        "newtab": "functionnalities/homepage.html"
    },

    "commands": {
        "open-ease": {
            "suggested_key": {
                "default": "Ctrl+Space",
                "mac": "Ctrl+Space"
            },
            "description": "Open Ease in a new tab."
        },
        "logout-ease": {
            "suggested_key": {
                "default": "Ctrl+L",
                "mac": "Ctrl+L"
            },
            "description": "Logout from ease and all connected websites."
        }
    }
}