
{
"manifest_version": 2,
    
"name" :"Ease",
"version" :"1.3.7",
"description" :"Ease extension, log you in and out",
    
"icons": {
    "128": "images/logo_128.png"
},
    
"browser_action": {
    "default_popup" : "functionnalities/popup.html",
    "default_icon": "images/logo_296.png"
},
      
"content_scripts": [
    {
      "matches": ["https://ease.space/*", "https://www.ease.space/*", "http://ease.space/*", "http://www.ease.space/*","http://localhost:8080/HelloWorld/*", "https://localhost:8443/HelloWorld/*", "http://localhost:8080/BackofficeUniv/*"],
      "js": ["jquery-3.1.0.js", "tools/extension.js", "easeActions/easeListener.js", "easeActions/updatesSender.js"]
    },
    {
        "matches": ["<all_urls>"],
        "js": ["tools/extensionLight.js","checkConnections/connectionListener.js"]
    },
    {
        "matches":["https://www.facebook.com/*"],
        "js":["facebookCo/checkFacebookConnection.js"]
    }
  ],
    
"background":{
    "page" : "background/background.html",
    "persistent": false
},
"permissions": ["tabs","\u003Call_urls\u003E","http://*/*", "https://*/*","webNavigation","storage"],
"chrome_url_overrides" : {
    "newtab": "functionnalities/homepage.html"
  },
"commands": {
      "open-ease": {
        "suggested_key": {
          "default": "Ctrl+Space",
          "mac": "Ctrl+Space"
        },
        "description": "Open Ease in a new tab."
      },
      "logout-ease": {
        "suggested_key": {
          "default": "Ctrl+L",
          "mac": "Ctrl+L"
        },
        "description": "Logout from ease and all connected websites."
      }
}
}